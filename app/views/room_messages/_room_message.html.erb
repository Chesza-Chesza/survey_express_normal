<%= turbo_frame_tag dom_id(room_message) do %>
  <% if room_message.readed %>
    <div class="card">
      <div class="card-body room-message-readed">
        <p><%= room_message.message %></p>
      </div>
    </div>
  <% else %>
    <div class="card">
      <div class="card-body">
        <p><%= room_message.message %></p>
      </div>
    </div>
  <% end %>
<% end %>
